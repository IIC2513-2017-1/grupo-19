<% provide(:title, @user.name)%>
<div class="">
  <aside class="">
    <section class = "user_info">
      <h1>
        <%= gravatar_for @user %>
        <%= @user.name %> ,
        <%= @user.email %>
      </h1>
        <% if current_user? @user %>
          <h4><%= link_to "Edit your profile", edit_user_path(current_user) %></h4>
        <% end %>
    </section>
  </aside>
</div>
