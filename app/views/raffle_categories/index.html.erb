<p id="notice"><%= notice %></p>

<h1>Raffle Categories</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @raffle_categories.each do |raffle_category| %>
      <tr>
        <td><%= raffle_category.name %></td>
        <td><%= raffle_category.description %></td>
        <td><%= link_to 'Show', raffle_category %></td>
        <td><%= link_to 'Edit', edit_raffle_category_path(raffle_category) %></td>
        <td><%= link_to 'Destroy', raffle_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

