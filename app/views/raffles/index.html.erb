<p id="notice"><%= notice %></p>

<h1>Raffles</h1>

<%= will_paginate %>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Price</th>
      <th>Final date</th>
      <th>Collected money</th>
      <th>User</th>
      <th>Raffle category</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @raffles.each do |raffle| %>
      <tr>
        <td><%= raffle.name %></td>
        <td><%= raffle.description %></td>
        <td><%= raffle.price %></td>
        <td><%= raffle.final_date %></td>
        <td><%= raffle.collected_money %></td>
        <td><%= raffle.user_id %></td>
        <td><%= raffle.raffle_category_id %></td>
        <td><%= link_to 'Show', raffle %></td>
        <td><%= link_to 'Edit', edit_raffle_path(raffle) %></td>
        <td><%= link_to 'Destroy', raffle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= will_paginate %>

<%= link_to 'New Raffle', new_raffle_path %>
