<header class="">
  <div class="logo">
    <%= link_to "Raffle-Mania", root_path, id: "logo"%>
  </div>
  <div class="search-bar-header">
    <%= form_tag("#{}", :method => "get", id: "search-form") do %>
    <select class="searchbar dropdown">
      <option value="0">Raffle</option>
      <option value="1">Prize</option>
      <option value="3">User</option>
    </select>
        <%= text_field_tag :search, params[:search], placeholder: "Search" %>
        <%= submit_tag "Search", :name => nil , class: "search-button"%>
    <% end %>
  </div>
  <div class="user-menu">
    <% if logged_in? %>
      <%= link_to "Organize Raffle", new_raffle_path %>
      <%= link_to "Profile", current_user %>
      <%= link_to "Messages", conversations_path %>
      <%= link_to "Log out", logout_path, method: :delete %>
    <% else %>
      <%= link_to "Log in", login_path %>
      <%= link_to "Sign up", signup_path %>
    <% end %>
  </div>
</header>
