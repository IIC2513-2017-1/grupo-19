<header class="header">
  <div class="leftnavbar">
    <nav>
      <a>
        <%= link_to "Raffle-Mania", root_path, id: "logo"%>
      </a>
      <a>
        <%= form_tag("#{}", :method => "get", id: "search-form") do %>
        <select class="searchbar dropdown">
          <option value="">Select</option>
          <option value="0">Raffle</option>
          <option value="1">Prize</option>
        </select>
        <%= text_field_tag :search, params[:search], placeholder: "Search" %>
        <%= submit_tag "Search", :name => nil %>
        <% end %>
      </a>
      <% if logged_in? %>
      <a><%= link_to "Users", users_path %></a>
      <a><%= link_to "Raffles", raffles_path %></a>
      <a><%= link_to "Organize Raffle", new_raffle_path %></a>
      <% end %>
    </nav>
  </div>
  <div class="usernavbar">
    <nav>
      <% if logged_in? %>
      <a><%=  link_to "Profile" , current_user %></a>
      <a><%= link_to "Messages", conversations_path %></a>
      <a><%= link_to "Settings", edit_user_path(current_user) %></a>
      <a><%= link_to "Log out", logout_path, method: :delete %></a>
    <% else %>
      <a><%= link_to "Log in", login_path %></a>
      <a><%= link_to "Sign up", signup_path %></a>
      <% end %>
    </nav>
  </div>
</header>
