<p id="notice"><%= notice %></p>

<h1>Comments</h1>

<table>
  <thead>
    <tr>
      <th>User id</th>
      <th>Raffle id</th>
      <th>Content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @comments.each do |comment| %>
      <tr>
        <td><%= comment.user_id %></td>
        <td><%= comment.raffle_id %></td>
        <td><%= comment.content %></td>
        <td><%= link_to 'Show', raffle_comment_path(id: comment.id) %></td>
        <td><%= link_to 'Edit', edit_raffle_comment_path(id: comment.id) %></td>
        <td><%= link_to 'Destroy', raffle_comment_path(id: comment.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Comment', new_raffle_comment_path %> |
<%= link_to 'Back', raffle_path(@raffle) %>
